<project name="openspcoop2-compile-wsmonitor">
    <description>
        Produzione dei jar relativi al package org.openspcoop2.pdd.monitor.ws.client
    </description>

	<import file="${openspcoop2}/ant/commons/svn-build.xml" />
	<import file="${openspcoop2}/ant/commons/compile-build.xml" />
	<import file="${openspcoop2}/ant/commons/api-build.xml" />
	
	<!-- estensione di ant (if .... ) -->
	<taskdef resource="net/sf/antcontrib/antlib.xml">
          <classpath>
              <pathelement location="${required_lib}/ant/ant-contrib-1.0b3.jar"/>
          </classpath>
	</taskdef>
	

	<!-- Compilazione della libreria 'org.openspcoop2.pdd.monitor.ws.client.*' -->
	<target name="compile_openspcoop2_monitor_ws" description="compila la libreria org.openspcoop2.pdd.monitor.ws.client.*">

		<if>
			<istrue value="${buildMonitorWS}"/>
			<then>
		
				<!-- Info svn -->
				<runtarget target="checksvn" />
							
				<!-- org.openspcoop2.pdd.monitor.ws.client -->
				<var name="packagesCompiled" value="org.openspcoop2.pdd.monitor.ws.client" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.pdd.monitor.ws.client.utils" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.pdd.monitor.ws.client.statopdd.all" />
				<var name="packagesCompiled" value="${packagesCompiled},org.openspcoop2.pdd.monitor.ws.client.messaggio.all" />
				<antcall target="compile_src_openspcoop2">
					<param name="compile_src_openspcoop2.SVNINFO" value="${svnant.jar.presente}"/>
					<param name="compile_src_openspcoop2.SRC_DIR" value="${src_monitor_ws_client}"/>
					<param name="compile_src_openspcoop2.SVN_ID_NAME" value="ws-monitor-client"/>
					<param name="compile_src_openspcoop2.BUILD_INCLUDES" value="**/*.java"/>
					<param name="compile_src_openspcoop2.SRC_PREFIX" value=""/>
					<param name="compile_src_openspcoop2.PACKAGE" value="org.openspcoop2.pdd.monitor.ws.client"/>
					<param name="compile_src_openspcoop2.DIST_DIR_NAME" value="."/>
					<param name="dist" value="${dist_monitor_ws_client}"/>
					<param name="build" value="${build_monitor_ws_client}"/>
				</antcall>
				
				<!-- unzip jar prodotto -->
				<delete dir="${build_monitor_ws_client}/classes" />
				<mkdir dir="${build_monitor_ws_client}/classes" />
				<unzip dest="${build_monitor_ws_client}/classes">
					<fileset dir="${dist_monitor_ws_client}">
						<include name="openspcoop2_ws-monitor-client*.jar"/>
					</fileset>
				</unzip>
				<delete dir="${dist_monitor_ws_client}" >
					<include name="openspcoop2_ws-monitor-client*.jar"/>
				</delete>
				<mkdir dir="${build_monitor_ws_client}/classes/monitor" />
				<copy todir="${build_monitor_ws_client}/classes/monitor">
					<fileset dir="${wsdl_monitor_ws_client}">
						<include name="*.wsdl"/>
						<include name="*.xsd"/>
					</fileset>
				</copy>
				
				<!-- Jar Complessivi -->
				<if>
		 			<available file="${build_classes_monitor_ws_client}/org/openspcoop2/pdd/monitor/ws/client/messaggio/package-info.class" type="file"/>
					<then>
						<antcall target="build_jar_schema">
							<param name="compile_src_openspcoop2.SVNINFO" value="${svnant.jar.presente}"/>
							<param name="compile_src_openspcoop2.JAR_SRC_DIR" value="${build_monitor_ws_client}/classes"/>
							<param name="compile_src_openspcoop2.SVN_ID_NAME" value="ws-monitor-client"/>
							<param name="compile_src_openspcoop2.JAR_SRC_INCLUDES" value="**/org/openspcoop2/pdd/monitor/ws/client/*/*"/>
							<param name="compile_src_openspcoop2.JAR_SRC_INCLUDES_2" value="**/ws/client/utils/RequestContextUtils.class"/>
							<param name="compile_src_openspcoop2.JAR_SRC_INCLUDES_3" value="**/org/openspcoop2/pdd/monitor/*.class"/> <!-- Classi rimaste non presenti in API -->
							<param name="compile_src_openspcoop2.JAR_SRC_INCLUDES_4" value="**/*.wsdl"/>
							<param name="compile_src_openspcoop2.JAR_SRC_INCLUDES_5" value="**/*.xsd"/>
							<param name="compile_src_openspcoop2.JAR_SRC_PREFIX" value=""/>
							<param name="compile_src_openspcoop2.DIST_DIR_NAME" value="."/>
							<param name="dist" value="${dist_monitor_ws_client}"/>
							<param name="build" value="${build_monitor_ws_client}"/>
						</antcall>
					</then>
				</if>
				<if>
		 			<available file="${build_classes_monitor_ws_client}/org/openspcoop2/pdd/monitor/ws/client/messaggio/all/package-info.class" type="file"/>
					<then>
						<antcall target="build_jar_schema">
							<param name="compile_src_openspcoop2.SVNINFO" value="${svnant.jar.presente}"/>
							<param name="compile_src_openspcoop2.JAR_SRC_DIR" value="${build_monitor_ws_client}/classes"/>
							<param name="compile_src_openspcoop2.SVN_ID_NAME" value="ws-monitor-client-all"/>
							<param name="compile_src_openspcoop2.JAR_SRC_INCLUDES" value="**/org/openspcoop2/pdd/monitor/ws/client/*/all/*"/>
							<param name="compile_src_openspcoop2.JAR_SRC_INCLUDES_2" value="**/ws/client/utils/RequestContextUtils.class"/>
							<param name="compile_src_openspcoop2.JAR_SRC_INCLUDES_3" value="**/org/openspcoop2/pdd/monitor/*.class"/> <!-- Classi rimaste non presenti in API -->
							<param name="compile_src_openspcoop2.JAR_SRC_INCLUDES_4" value="**/*All*.wsdl"/>
							<param name="compile_src_openspcoop2.JAR_SRC_INCLUDES_5" value="**/*All*.xsd"/>
							<param name="compile_src_openspcoop2.JAR_SRC_INCLUDES_6" value="**/monitor.xsd"/>
							<param name="compile_src_openspcoop2.JAR_SRC_PREFIX" value=""/>
							<param name="compile_src_openspcoop2.DIST_DIR_NAME" value="."/>
							<param name="dist" value="${dist_monitor_ws_client}"/>
							<param name="build" value="${build_monitor_ws_client}"/>
						</antcall>
					</then>
				</if>
				
				<!-- API -->
				<if>
					<istrue value="${buildAPI}"/>
					<then>
						<mkdir dir="${doc_monitor_ws_client}"/>
					</then>
				</if>
				<antcall target="compile_api_openspcoop2">
					<param name="compile_src_openspcoop2.PACKAGES" value="${packagesCompiled}"/>
					<param name="compile_src_openspcoop2.API_NAME" value="ws-monitor-client"/>
					<param name="compile_src_openspcoop2.API_DIR" value="${doc_monitor_ws_client}/api"/>
					<param name="compile_src_openspcoop2.SVNINFO" value="${svnant.jar.presente}"/>
					<param name="src" value="${src_monitor_ws_client}"/>
					<param name="doc" value="${doc_monitor_ws_client}"/>
					<param name="dist" value="${dist_monitor_ws_client}"/>
				</antcall>
				
			</then>
		</if>
		
	</target>
	
</project>
